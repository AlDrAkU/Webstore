@model CartViewModel

<div class="container mx-auto px-4">
    <h2 class="text-2xl font-bold mb-4">Your Shopping Cart</h2>

    @if (Model.Items.Any())
    {
        <table class="table-auto w-full mb-4">
            <thead>
                <tr class="bg-gray-200">
                    <th class="px-4 py-2">Product</th>
                    <th class="px-4 py-2">Quantity</th>
                    <th class="px-4 py-2">Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td class="border px-4 py-2">@item.Product.Name</td>
                        <td class="border px-4 py-2">@item.Quantity</td>
                        <td class="border px-4 py-2">@(item.Product.Price * item.Quantity)</td>
                    </tr>
                }
            </tbody>
        </table>

        <p class="text-xl"><strong>Total Price:</strong> @Model.TotalPrice</p>

        <form asp-controller="Orders" asp-action="Checkout" method="post">
            <input type="submit" value="Checkout" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-700" />
        </form>
    }
    else
    {
        <p class="text-lg">Your shopping cart is empty.</p>
    }
</div>
